@model Lab9.Models.WeatherInfo

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather Information</title>
</head>
<body>
    <h2>Current Weather for @ViewData["City"]</h2>

    <p><strong>Temperature:</strong> @Model.Main.Temperature °C</p>
    <p><strong>Humidity:</strong> @Model.Main.Humidity %</p>
    <p><strong>Description:</strong> @Model.Weather[0].Description</p>
</body>
</html>
